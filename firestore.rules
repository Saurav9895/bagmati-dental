rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Allow users to read and write their own data.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to read and write to these collections.
    // The {document=**} allows for deep wildcard matching for any document in the collection.
    match /patients/{document=**} {
      allow read, list, write: if request.auth != null;
    }

    match /appointments/{document=**} {
      allow read, list, write: if request.auth != null;
    }

    match /treatments/{document=**} {
      allow read, list, write: if request.auth != null;
    }

    match /counters/{document=**} {
        allow read, list, write: if request.auth != null;
    }
    
    match /expenses/{document=**} {
        allow read, list, write: if request.auth != null;
    }
    
    match /stock/{document=**} {
        allow read, list, write: if request.auth != null;
    }
    
    match /chiefComplaints/{document=**} {
        allow read, list, write: if request.auth != null;
    }

    match /dentalExaminations/{document=**} {
        allow read, list, write: if request.auth != null;
    }
  }
}
