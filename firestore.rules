rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // WARNING: These rules are insecure and are NOT recommended for production.
    // They allow public read/write access to your collections for development purposes.
    match /patients/{patientId} {
      allow read, write: if true;
    }

    match /treatments/{treatmentId} {
      allow read, write: if true;
    }
  }
}
