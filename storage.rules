rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow clients to read files, but restrict writes/deletes.
    // Deletions should be handled by a trusted server environment (Firebase Admin SDK).
    match /patients/{patientId}/{fileId} {
      allow read: if request.auth != null;
      allow write: if false; // Disallow client-side writes for more security. Uploads are handled by server.
    }
  }
}
