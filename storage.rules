
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Grant read, create, and update access to any authenticated user.
    // Grant delete access separately to ensure it is explicitly allowed.
    match /{allPaths=**} {
      allow read, create, update: if request.auth != null;
      allow delete: if request.auth != null;
    }
  }
}
