rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Secure rule: Allow access only to files within the 'patients' directory
    // for authenticated users. The 'write' permission includes create, update, and delete.
    match /patients/{patientId}/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
