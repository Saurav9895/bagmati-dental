
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read, write, and delete access to patient files for any authenticated user.
    // This allows clinic staff to manage all patient-related documents.
    match /patient_files/{patientId}/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
