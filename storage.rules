rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Rules for patient files.
    // Allow reads and writes if the user is authenticated.
    // For production, you might want to add more specific rules,
    // e.g., checking if a user is a doctor or staff member.
    match /patients/{patientId}/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
